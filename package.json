{
  "name": "js-starter-code",
  "version": "1.0.0",
  "description": "JS Starter Code",
  "main": "script.js",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "<rootDir>",
      "public/dist",
      "public/js",
      "node_modules",
      "bower_components",
      "shared"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.js"
    }
  },
  "scripts": {
    "start": "lite-server",
    "start:dev": "clear; run-p \" build:* \"",
    "build:serve": "npm run browser-sync",
    "build:css": "node-sass -rw ./public/styles/sass/ -o ./public/styles/css/",
    "build:js": "webpack -w",
    "browser-sync": "browser-sync start --config ./config/bs-config.js",
    "jest": "jest --config=jest.config.js --watchAll",
    "jest-single": "jest --config=jest.config.js  ./tests/jest/spec/race.test.ts --watchAll",
    "cy:run": "clear; cypress run --config-file cypress.json -s tests/cypress/integration/racing_app/start.spec.js",
    "cy:open": "clear; cypress open",
    "test": "run-p --race --print-label start:dev cy:run"
  },
  "author": "Pluralsight",
  "license": "ISC",
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "autoprefixer": "6.7.7",
    "awesome-typescript-loader": "^5.2.1",
    "babel-core": "6.24.0",
    "babel-jest": "^26.1.0",
    "babel-loader": "^9.1.3",
    "babel-preset-env": "^1.6.0",
    "browser-sync": "^2.26.7",
    "circular-dependency-plugin": "^5.2.0",
    "concurrently": "3.4.0",
    "css-loader": "0.28.11",
    "cypress": "^4.8.0",
    "extract-text-webpack-plugin": "2.1.0",
    "jest": "^26.0.1",
    "node-sass": "^4.14.1",
    "nodemon": "^1.18.3",
    "nodemon-webpack-plugin": "^4.3.1",
    "now": "^6.4.1",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "1.3.3",
    "sass-loader": "6.0.3",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^26.1.0",
    "ts-loader": "^7.0.2",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.10.3",
    "webpack-shell-plugin": "^0.5.0"
  },
  "dependencies": {}
}
